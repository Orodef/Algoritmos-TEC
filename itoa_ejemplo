// itoa_ejemplo.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"  //importa librerías
#include <stdlib.h>  
#include <string.h>  


const int MAX = 100;  //inicializa un valor constante, con nombre MAX y valor de 100 inicialmente

int main(void)  //inicia el programa principal. El void indica que no devuelve ningún valor
{
	char Texto[65];  //inicializa una variable de tipo caracter llamada Texto con 65 espacios de capacidad
	int contador;    //variable de tipo entero llamada contador
	for (contador = 0; contador < MAX; contador++)  //un ciclo for, que inicializa contador en 0 y mientras sea menor que MAX, ejecuta las líneas y al final suma 1 al contador
	{
		_itoa_s(contador, Texto, 65, 10);   //función que sirve para pasar una variable de entero a caracter. Pasa por parámetros (por valor) a contador y Texto
		//el itoa toma el valor 10 dado y lo guarda en el parámetro caracter dado

		char NombreAutomatico[65] = "Pieza_";  //inicializa una variable de tipo caracter con 65 de capacidad
		strcat_s(NombreAutomatico, Texto);  //sirve para agregarle los caracteres de Texto a NombreAutomatico
		//acá, sólo se modifica lo que sigue después de Pieza_

		printf("Para el entero %d: el texto es  %s\n", contador, NombreAutomatico);   //%d se refiere a que es dígito(contador) y %s a que es una cadena de caracteres(NombreAutomatico)
	}

	system("pause");    //esta línea sirve para poder ver lo que se ejecuta. Es una función que le pide detenerse hasta que el usuario quiera

}
